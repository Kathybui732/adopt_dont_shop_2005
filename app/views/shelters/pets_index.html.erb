
<h1 class="page-header"><%= @shelter.name %></h1><br>
<br>
<h2 class="page-subtitle">Available Pets</h2>
<ul class="list">
  <% @pets.each do |pet| %>
    <% if @shelter.id == pet.shelter_id %>
      <%= image_tag(pet.image, alt: pet.name, method: :get) %>
      <p><%= pet.name %></p>
      <p><%= pet.sex %>, <%= pet.approximate_age %></p>
      <p><%= pet.status %></p>
      <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit", method: :get %></p>
      <p><%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></p>
    <% else %>
    <% end %>
  <% end %>
</ul>

<%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new", method: :get %>
