<html>
  <head>
    <title><% @shelter.name %></title>
    <link rel="stylesheet" href="stylesheets/reset.css" title="text/css" />
    <link rel="stylesheet" href="stylesheets/main.css" title="text/css" />
  </head>

  <body>
    <header>
      <h1><%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h1>
      <nav>
        <ul>
          <li><%= link_to "Shelters", "/shelters" %></li>
          <li><%= link_to "Pets", "/pets" %></li>
        </ul>
      </nav>
    </header>

    <section class = "shelter-pet-index">
      <h3>Available Pets</h3>
      <br>
      <p>There are <%= @pets.count %> pets available for adoption!!</p>
      <br>
      <br>
      <br>
      <% @pets.each do |pet| %>
        <p><%= image_tag(pet.image, alt: pet.name, class: "shelter-pet-index-image") %></p>
        <ul>
          <li><%= link_to "#{pet.name}", "/pets/#{pet.id}" %></li>
          <li><i><%= pet.sex %></i>, <%= pet.approximate_age %></li>
          <li><%= pet.description %></li>
          <li><strong><%= pet.status %></strong></li>
        </ul>
        <p><%= link_to "Edit #{pet.name}", "/pets/#{pet.id}/edit", method: :get %> || <%= link_to "Delete #{pet.name}", "/pets/#{pet.id}", method: :delete %></p>
      <% end %>
      <p>
        <%= link_to "Create Pet", "/shelters/#{@shelter.id}/pets/new"%>
      </p>
    </section>
  </body>
</html>
