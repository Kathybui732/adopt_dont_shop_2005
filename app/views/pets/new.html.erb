<h1 class="page-header">Add a new pet for adoption!</h1>

<nav class="menu">
  <ul>
    <li><%= link_to "Shelters", "/shelters", method: :get %></li>
    <li><%= link_to "Pets", "/pets", method: :get %></li>
  </ul>
</nav>

<p class = "instructions">Please provide information about your pet</p>
  <%= form_tag "/shelters/#{@shelter_id}/pets" do %>
  <%= label_tag :image %>
  <%= text_field_tag :image %><br>
  <%= label_tag :name %>
  <%= text_field_tag :name %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex %><br>
  <br>
  <%= submit_tag "Create Pet" %>
  <% end %>
