<h1 class = "page-header">Edit <%= link_to "#{@pet.name}", "/pets/#{@pet.id}", method: :get %> </h1>

<nav class="menu">
  <ul>
    <li><%= link_to "Shelters", "/shelters", method: :get %></li>
    <li><%= link_to "Pets", "/pets", method: :get %></li>
  </ul>
</nav>

<p class = "instructions">Update pet's information</p>
  <%= form_tag "/pets/#{@pet.id}", method: :patch do %>
  <%= label_tag :image %>
  <%= text_field_tag :image, "#{@pet.image}"%><br>
  <%= label_tag :name %>
  <%= text_field_tag :name, "#{@pet.name}" %><br>
  <%= label_tag :description %>
  <%= text_field_tag :description, "#{@pet.description}" %><br>
  <%= label_tag :approximate_age %>
  <%= text_field_tag :approximate_age, "#{@pet.approximate_age}" %><br>
  <%= label_tag :sex %>
  <%= text_field_tag :sex, "#{@pet.sex}" %><br>
  <br>
  <%= submit_tag "Update Pet" %>
  <% end %>
