<html>
  <head>
    <title>Edit Pet</title>
    <link rel="stylesheet" href="stylesheets/reset.css" title="text/css" />
    <link rel="stylesheet" href="stylesheets/main.css" title="text/css" />
  </head>

  <body>
    <header>
      <h1>Edit <%= link_to "#{@pet.name}", "/pets/#{@pet.id}", method: :get %></h1>
      <nav>
        <ul>
          <li><%= link_to "Shelters", "/shelters" %></li>
          <li><%= link_to "Pets", "/pets" %></li>
        </ul>
      </nav>
    </header>

    <section class="form">
      <h4>Edit pet's information here:</h4>
      <%= form_tag "/pets/#{@pet.id}", method: :patch do %>
        <%= label_tag :image %>
        <%= text_field_tag :image, "#{@pet.image}"%><br>
        <%= label_tag :name %>
        <%= text_field_tag :name, "#{@pet.name}" %><br>
        <%= label_tag :description %>
        <%= text_field_tag :description, "#{@pet.description}" %><br>
        <%= label_tag :approximate_age %>
        <%= text_field_tag :approximate_age, "#{@pet.approximate_age}" %><br>
        <%= label_tag :sex %>
        <%= text_field_tag :sex, "#{@pet.sex}" %><br>
        <br>
        <%= submit_tag "Update Pet" %>
      <% end %>
    </section>
  </body>
</html>
